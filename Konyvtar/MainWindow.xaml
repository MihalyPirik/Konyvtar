<Window x:Class="Konyvtar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konyvtar"
        mc:Ignorable="d"
        Title="Könyvtár" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Padding="0,5,0,5">
            <MenuItem Header="Könyvek listázása" x:Name="konyvLista_M" Click="konyvLista_M_Click"/>
            <MenuItem Header="Könyv" x:Name="konyv_M" Click="konyv_M_Click"/>
            <MenuItem Header="Kölcsönzés" x:Name="kolcsonzes_M" Click="kolcsonzes_M_Click"/>
        </Menu>

        <Frame x:Name="nyito_FRM" NavigationUIVisibility="Hidden" Grid.Row="1"/>
        
    </Grid>
</Window>
